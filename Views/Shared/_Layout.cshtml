<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Copy de BlockBuster</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Copy de BlockBuster.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Copy de BlockBuster</a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                @if (User.IsInRole("User"))
                {
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0" style="display:flex; list-style:none; padding: 5px 5px 0 5px">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ActorDVD" asp-action="Index">ActorDVD</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Producers" asp-action="Index">Producers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Studios" asp-action="Index">Studios</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" asp-area="" asp-controller="DVDCategories" asp-action="Index">DVDCategories</a>                     
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="DVDCategories" asp-action="Index">Categories</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="DVDTitles" asp-action="Index">DVDTitles</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="DVDonShelves" asp-action="Index">DVD On shelves</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="DVDDetails" asp-action="Index">DVD Details</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="DVDLoan" asp-action="Index">DVD Loan</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Memberships</a>                     
                              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="MembershipCategories" asp-action="Index">MemberShip Categories</a>
                                </li>
                                <li>
                                    <a  class="dropdown-item text-dark" asp-area="" asp-controller="Members" asp-action="Index">Members</a>
                                </li>
                                <li>
                                    <a  class="dropdown-item text-dark" asp-area="" asp-controller="MemberLoans" asp-action="Index">Member's Loan</a>
                                </li>
                                <li>
                                    <a  class="dropdown-item text-dark" asp-area="" asp-controller="MemberDetails" asp-action="Index">Member Details</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="LoanTypes" asp-action="Create">Loan Type</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Loans" asp-action="Create">Create Loan</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="RoleManager" asp-action="Index">RoleManager</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="OldCopies" asp-action="Index">Old Copies</a>
                        </li>
                    </ul> 

                }
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <li class="nav-item">
                &copy; 2022 - Copy de BlockBuster - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </li>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
