@model RopeyDVDRental.Models.Loan

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Loan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (Html.ViewData.ModelState["success"] != null)
            {
                @Html.ViewData.ModelState["success"].Errors[0].ErrorMessage;
            }

            <div asp-validation-summary="ModelOnly" ></div>
            <div class="form-group">
                <label asp-for="LoanType.Loantype" class="control-label"></label>
                <select asp-for="LoanType.Loantype" class ="form-control" asp-items="ViewBag.LoanType"></select>
            </div>
            <div class="form-group">
                <label asp-for="CopyNumber" class="control-label"></label>
                <select asp-for="CopyNumber" class ="form-control" asp-items="ViewBag.CopyNumber"></select>
            </div>
            <div class="form-group">
                <label asp-for="MemberNumber" class="control-label"></label>
                <select asp-for="MemberNumber" class ="form-control" asp-items="ViewBag.MemberNumber"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
